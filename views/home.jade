extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h3.text-center.login-title Welcome #{user.firstName}.
						a(href='/signout', class='text-center new-account') Sign Out
	div.container
		h3 Calendar List
		form
			select(name='Calendar List', id='calendar-dropdown')
				option(value='', class='calendar-option')
			input(type='submit', id='calendar-choice-submit')
		button(type='submit', id='button', value='button')
		div#calendar
	div#addevent
		form(class='form-addevent', id='addEventForm', action='', method='POST')
			input(type='text', name='title', class='form-control', id='title', placeholder='Event Title', required)
			input(type='text', name='Description', class='form-control nomargin',id='description', placeholder='Description')
			input(type='text', name='start', class='form-control', id='start',placeholder='#{date}',required)
			input(type='text', name='end', class='form-control', id='end',placeholder='End Date yyyy-mm-dd')
			input(type='text', name='tags', class='form-control', id='tags',placeholder='tags')
			input(type='text', name='url', class='form-control', id='url',placeholder='URL/Tracking URL')
			input(type='text', name='drivesto', class='form-control', id='drivesto',placeholder='Is Driving To')
			input(type='text', name='notes', class='form-control',id='notes', placeholder='Notes')
			input(type='submit', class='btn btn-lg btn-primary btn-block', id='createevent', value='Create Event')
			span.clearfix
	div#editevent
		h3 <a href='#' class='editeventfield' id='title-anchor' onclick='editEvent(this.id)'></a> 
		p <a href='#' class='editeventfield' id='description-anchor' onclick='editEvent(this.id)'></a>
		p <a href='#' class='editeventfield' id='start-anchor' onclick='editEvent(this.id)'></a>
		p <a href='#' class='editeventfield' id='end-anchor' onclick='editEvent(this.id)'></a>
		p <a href='#' class='editeventfield' id='tags-anchor' onclick='editEvent(this.id)'></a>
		p <a href='#' class='editeventfield' id='urlTrackingurl-anchor' onclick='editEvent(this.id)'></a>
		p <a href='#' class='editeventfield' id='isDrivingTo-anchor' onclick='editEvent(this.id)'></a>
		p <a href='#' class='editeventfield' id='notes-anchor' onclick='editEvent(this.id)'></a>
	div#editDialog
		form(class='form-editfield', id='editEventForm', action='', method='')
			input(type='text', name='eventparameterfield', id='event-field', placeholder='')
			input(type='submit', class='btn btn-lg btn-primary btn-block', id='edit-event-submit', value='Edit Field')
			
			